<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  	 xmlns:android="http://schemas.android.com/apk/res/android"
  	 android:id="@+id/frame"
  	 android:orientation="vertical"
  	 android:layout_width="fill_parent"
  	 android:layout_height="fill_parent"
  	 android:background="@drawable/background">
  	<EditText
  	    android:id="@+id/destination_address"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:hint="To:"/> 	
	<com.google.android.maps.MapView
      	android:id="@+id/map"
      	android:apiKey="@string/MapAPIKey"
     	android:layout_width="fill_parent"
    	android:layout_height="400dip"
      	android:clickable="true" />
	<LinearLayout
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:gravity="center">
			<Button
				android:id="@+id/track_this_route_button"
				android:text="@string/track_this_route_label"
				android:layout_height="40dip" 
				android:layout_width="wrap_content" 
				android:textSize="18sp"
				android:typeface="sans"
				android:layout_gravity="center"
				android:background="@drawable/mainbutton"
				android:layout_marginRight="5dip"/>
			<Button
				android:id="@+id/find_route_button"
				android:text="@string/find_route_label"
				android:layout_height="40dip" 
				android:layout_width="wrap_content" 
				android:textSize="18sp"
				android:typeface="sans"
				android:layout_gravity="center"
				android:background="@drawable/mainbutton"/>
	</LinearLayout>
</LinearLayout>
