<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/get_text_message_number" />
	<EditText android:id="@+id/txtPhoneNo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:hint="hold down for contacts" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/message_label" />
	<EditText android:id="@+id/txtMessage" android:layout_width="fill_parent"
		android:layout_height="150px" android:gravity="top" />
	<Button android:id="@+id/btnSendSMS" android:text="@string/send_text_message_label"
		android:layout_height="40dip" android:layout_width="wrap_content"
		android:textSize="18sp" android:typeface="sans"
		android:layout_gravity="center" android:background="@drawable/mainbutton" />
</LinearLayout>